{
  "name": "parkdude-backend",
  "version": "0.1.0",
  "bin": {
    "parkdude-backend": "bin/parkdude-backend.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "ts-node lib/copy-node-modules.ts",
    "watch": "tsc -w",
    "dev": "nodemon --watch app/**/*.ts --ignore app/**/*.test.ts --exec ts-node app/index.ts",
    "dev:serve": "ts-node app/index.ts",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth",
    "local-synth": "cdk synth --no-staging > template.yaml",
    "sam-api": "cdk synth --no-staging > template.yaml && sam local start-api"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.11.0",
    "@types/jest": "^24.0.18",
    "aws-cdk": "^1.11.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "~3.6.2"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "^1.11.0",
    "@aws-cdk/aws-lambda": "^1.11.0",
    "@aws-cdk/core": "^1.11.0",
    "@types/aws-lambda": "^8.10.33",
    "@types/aws-serverless-express": "^3.3.1",
    "@types/fs-extra": "^8.0.0",
    "@types/node": "^12.7.11",
    "@types/rimraf": "^2.0.2",
    "aws-serverless-express": "^3.3.6",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "source-map-support": "^0.5.9"
  }
}
